# Django Core Settings
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,your-app.ondigitalocean.app

# Database Configuration (PostgreSQL)
POSTGRES_DB=restaurant_db
POSTGRES_USER=restaurant_user
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_HOST=your-db-host.db.ondigitalocean.com
POSTGRES_PORT=25060

# CORS Configuration (comma-separated list)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://www.your-frontend.com

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Frontend URL (for email links)
DEFAULT_FROM_EMAIL=The Restaurant <noreply@therestaurant.com>
FRONTEND_URL=https://your-frontend.com

# Redis Configuration (for Channels/WebSockets)
REDIS_URL=redis://your-redis-host:6379

# Logging Level (optional)
DJANGO_LOG_LEVEL=INFO
